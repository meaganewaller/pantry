<div class="nested-fields">
  <div>
    <%= f.label :amount %>
    <%= f.text_field :amount %>
  </div>

  <div class="ingredients">
    <%= f.fields_for :ingredient do |ingredient| %>
      <%= render "ingredient_fields", f: ingredient %>
    <% end %>
  </div>

  <div>
    <%= f.label :description %>
    <%= f.text_field :description %>
  </div>

  <%= link_to_remove_association "remove ingredient", f %>
</div>
